<p>this is the wheelcover page</p>
<button id="commit" >Commit changes</button>
<section class="color-indicators-container">
    <table>
        <caption>Color operation indicators</caption>
        <tr><th>deleted</th><th>newly added</th><th>edited</th><th>new & edited</th></tr>
        <tbody>
            <tr>
                <td class="delete-indicator"></td>
                <td class="new-indicator" ></td>
                <td class="edited-indicator" ></td>
                <td class="new-edited-indicator" ></td>
            </tr>
        </tbody>
    </table>
</section>
{{#if product}}
{{#with product}}
<article class="product-container {{this.productID}}" >
    <table id="wheelDiameter" class="subproduct-table">
        <caption>WHEEL DIAMETER</caption>
        <tr><th>from</th><th>to</th><th>unit</th><th>price</th><th>unit</th><th>stock</th></tr>
        {{#each this.wheelDiameter}}
        <tr class="wheelDiameter-row">
            <td class="wheelDiameter-amount-from" >{{this.amount.from}}</td>
            <td class="wheelDiameter-amount-to" >{{this.amount.to}}</td>
            <td class="wheelDiameter-unit" >{{this.unit}}</td>
            <td class="wheelDiameter-price" >{{this.price}}</td>
            <td class="wheelDiameter-price-unit" >{{this.priceUnit}}</td>
            <td class="wheelDiameter-stock" >{{this.stock}}</td>
            <td class="edit" ><img src="/assets/smalls/edit_pencil_icon.svg" height="20" width="20" alt="edit-icon"></td>
            <td class="delete-operation" ><img src="/assets/smalls/delete_garbage_bin.svg" height="20" width="20" alt="delete-icon"></td>
            <td class="index" >{{@index}}</td>
        </tr>
        {{/each}}
        <tr>
            <td class="wheelDiameter-amount-from" ><input type="text" name="wheelDiameter-amount-from" disabled> </td>
            <td class="wheelDiameter-amount-to" ><input type="text" name="wheelDiameter-amount-to" disabled></td>
            <td class="wheelDiameter-unit" ><input type="text" name="wheelDiameter-unit" value="cm" disabled></td>
            <td class="wheelDiameter-price" ><input type="text" name="wheelDiameter-price" disabled></td>
            <td class="wheelDiameter-price-unit" ><input type="text" name="wheelDiameter-unit" value="euro" disabled></td>
            <td class="wheelDiameter-stock" ><input type="text" name="wheelDiameter-stock" disabled></td>
            <td class="add" colspan="2"><button>Add new product</button></td>
        </tr>
    </table>
    <table id="thickness" class="subproduct-table" >
