{{#section "script"}}
<script src="{{subRoutes}}js/checkout_address3.js" type="text/javascript" ></script>
{{/section}}
<section id="address-container" >
    <div class="paulos-borders">
        <section class="popFields">
            <div id="label-active" class="labels top-border-radius"><div class="radio"></div><label id="act-address-town" class="vis-labels"><label id="act-address">leoforos oxi 12</label>, <label id="act-town">Thessaloniki</label></label></div>
            <div id="pop-active" class="pop">
                <label id="act-name" class="pop-active-content">paulos noulis</label></br>
                <label id="act-notes" class="pop-active-content">there are no note</label></br>
                <label id="act-TK" class="pop-active-content">54670, Thessaloniki</label></br>
                <label id="act-email" class="pop-active-content">mmmm@mail.com</label>
            </div>
        </section>
        <section class="popFields">
            <div id="label-new" class="labels bottom-border-radius"><div class="radio"></div><label class="vis-labels">New Address</label></div>
            <div id="pop-new" class="pop">
                <form id="address-form" >
                <article class="shipping-container" >
                    <input type="text" name="name"  id="name" class="shipping-inputs" placeholder="Name: John Smith" >
                    <input type="email" name="email"  id="email" class="shipping-inputs" placeholder="Email: yourmail@mail.com" >
                    <input type="text" name="address1" id="address1" class="shipping-inputs" placeholder="Line 1: Baker Street, 2B"  >
                    <input type="text" name="address2" id="address2" class="shipping-inputs" placeholder="Line 2: Baker Street, 2B"  >
                    <input type="text" name="city" id="city" class="shipping-inputs" placeholder="City: London"  >
                    <input type="text" name="country" id="country" class="shipping-inputs" placeholder="Country: Sweden" >
                    <input type="text" name="postcode" id="postcode" class="shipping-inputs" placeholder="PostCode: W1U 8ED"  >
                </article>
                </form>
            </div>
        </section>
    </div>
    <div class="textarea-container">
        <textarea id="comments" placeholder="Put your comments here..." rows="5"></textarea>
    </div>
    <div class="submit-container">
        <input type="submit" id="submit" form="address-form" value="submit" >
    </div>
</section>
